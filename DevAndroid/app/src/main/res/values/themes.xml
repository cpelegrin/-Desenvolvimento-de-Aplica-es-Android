<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesenvolvimentoParaAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DesenvolvimentoParaAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DesenvolvimentoParaAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DesenvolvimentoParaAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.DesenvolvimentoParaAndroid.Fullscreen" parent="Theme.DesenvolvimentoParaAndroid">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.DesenvolvimentoParaAndroid.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.DesenvolvimentoParaAndroid.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_100</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>